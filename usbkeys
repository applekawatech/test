#!/bin/bash

run_hook() {
    echo "Running usbkeys hook..."

    # Fixed temporary directory path
    tmp_dir="/run/tmp"

    # Create the directory if it doesn't exist
    if [ ! -d "$tmp_dir" ]; then
        echo "Creating $tmp_dir directory..."
        sudo mkdir -p "$tmp_dir"
        sudo chmod 1777 "$tmp_dir"  # Set permissions to drwxrwxrwt
    fi

    # Mount USB devices
    usb_found=false
    for dev in /dev/disk/by-id/usb*; do
        echo "Trying to mount USB device: $dev"
        if sudo mount -t auto "$dev" "$tmp_dir" 2>/dev/null; then
            echo "USB device mounted at $tmp_dir"
            usb_found=true
            break
        else
            echo "Failed to mount: $dev"
        fi
    done

    if $usb_found; then
        # Copy the key file if found
        if [ -f "$tmp_dir/Ilovemasa.py" ]; then
            echo "Key file found, moving to $tmp_dir/Ilovemasa.py"
            sudo mv "$tmp_dir/Ilovemasa.py" "$tmp_dir/Ilovemasa.py"
        else
            echo "Key file not found on USB device"
            sudo umount "$tmp_dir"
            exit 1
        fi

        # Unmount USB device
        echo "Unmounting USB device..."
        sudo umount "$tmp_dir"
    else
        echo "No USB device mounted"
        exit 1
    fi
}

# Run the hook function
run_hook
